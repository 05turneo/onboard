<div class="eight columns offset-by-two"</div>

	<h2>Log in</h2>

	<%= simple_form_for :session, url: session_path do |f| %>

		<%= f.input :username %>
		<%= f.input :password %>

		<%= f.button :submit, "log in" %>

	<% end %>

</div>

		<span> Login with... </span>

	<%= link_to "Facebook", "/auth/facebook", class: "button" %>
	<%= link_to "Twitter", "/auth/twitter", class: "button" %>
	<%= link_to "Linkedin", "/auth/linkedin", class: "button" %>